@model ProductViewModel
@{
	ViewData["Title"] = "Create";
}

<div class="col-4">
	@* <p class="fw-bold fs-1">Create Product </p> *@
	<h1 class="fw-bold fs-1">Create Product </h1>

	@using (Html.BeginForm("Create", "Products"))
	{
		<div class="form-group">
			@Html.LabelFor(l => l.Name)
			@Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
			@Html.ValidationMessageFor(vm => vm.Name, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(l => l.Price)
			@Html.TextBoxFor(t => t.Price, new { @class = "form-control" })
			@Html.ValidationMessageFor(vm => vm.Price, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(l => l.Category)
			@Html.TextBoxFor(t => t.Category, new { @class = "form-control" })
			@Html.ValidationMessageFor(vm => vm.Category, "", new { @class = "text-danger" })
		</div>
		<br />
		<button type="submit" class="btn btn-primary">Create</button>

	}

	@Html.ActionLink("Back to List", "Index", "Products")
	<br /><br />

</div>
